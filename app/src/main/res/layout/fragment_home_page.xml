<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.HomePageActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="11dp">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_marginTop="16dp"
                android:id="@+id/img_display"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/uploadedImage"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/img_guideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/guidelines_image"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/uploadedImage"
                android:scaleType="centerCrop"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/white"
                android:padding="11dp"
                app:cardElevation="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageButton
                        android:id="@+id/btn_add_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/upload_image"
                        android:src="@drawable/baseline_cloud_upload_24"
                        android:text="@string/upload_image"></ImageButton>

                    <TextView
                        android:id="@+id/btnUploadImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="@string/upload_image"
                        android:textColor="@color/black"
                        android:textSize="15sp"></TextView>

                    <!--                    <ProgressBar-->
                    <!--                        android:id="@+id/progress_bar"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
                    <!--                        android:max="100"-->
                    <!--                        tools:progress="30">-->
                    <!--                    </ProgressBar>-->

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/sliderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Round -->
                <LinearLayout
                    android:paddingVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/roundTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/round"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/roundSl"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        app:indicatorColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:paddingHorizontal="5dp"
                        android:id="@+id/roundPercentTv"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/_100"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Square -->
                <LinearLayout
                    android:paddingVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/squareTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/square"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/squareSl"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        app:indicatorColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/squarePercentTv"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_100"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Oval -->
                <LinearLayout
                    android:paddingVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ovalTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Oval"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/ovalSl"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        app:indicatorColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/ovalPercentTv"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:text="@string/_100"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Oblong -->
                <LinearLayout
                    android:paddingVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/oblongTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Oblong"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/oblongSl"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        app:indicatorColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/oblongPercentTv"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:text="@string/_100"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Heart -->
                <LinearLayout
                    android:paddingVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/heartTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Heart"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/heartSl"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        app:indicatorColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/heartPercentTv"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_100"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Result -->
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="@string/result"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/resultTv"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        tools:text="Round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnLayout"
                android:visibility="gone"
                android:padding="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/maleBtn"
                    android:text="@string/male"
                    android:layout_weight="5"
                    android:backgroundTint="@color/black"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/femaleBtn"
                    android:text="@string/female"
                    android:layout_weight="5"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/suggested_items"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="gone">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fillViewport="true"
                android:orientation="vertical"
                android:visibility="gone"
                tools:itemCount="10"
                tools:listitem="@layout/rcv_recommend_items">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>